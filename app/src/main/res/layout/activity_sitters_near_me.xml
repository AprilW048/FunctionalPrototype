<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="@string/sitter_near_me"
        android:textSize="30sp"
        android:paddingBottom="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/Image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/something"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/Image"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/Image"
            android:gravity="left|center_vertical"
            android:paddingBottom="3dp"
            android:text="Bob"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/Image"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:text="Animal Lovers"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_alignParentRight="true"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:text="1.5 mi"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@+id/simpleRatingBar"
            android:layout_alignBottom="@id/simpleRatingBar"


            />

        <RatingBar
            android:id="@+id/simpleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/Description"
            android:rating="4"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-10dp"/>

        <Button
            android:id="@+id/endorsed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/endorsed_tag"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:text="friend endorsed"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/Title"
            android:textSize="10dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="$23"
            android:textColor="#EA6E2E"
            android:textSize="25dp"
            android:textStyle="bold"

            />

    </RelativeLayout>

</LinearLayout>