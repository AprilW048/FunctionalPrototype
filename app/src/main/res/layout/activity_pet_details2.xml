<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetDetails"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pet_search2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true">

        <SearchView
            android:id="@+id/pet_search_box2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:labelFor="@string/search" />

        <ImageButton
            android:id="@+id/pet_detail_filter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="@id/pet_search_box2"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/pet_search_box2"
            android:background="@drawable/ic_filter" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pet_add_detail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:clickable="true">

        <Button
            android:id="@+id/Image2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/dog_pic1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/Image2"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/Image2"
            android:gravity="left|center_vertical"
            android:paddingBottom="3dp"
            android:text="Kobe"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/gender2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/Title2"
            android:background="@drawable/boy"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/Description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title2"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/Image2"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:text="Shiba Inu"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/Age2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title2"
            android:gravity="left|center_vertical"
            android:layout_alignTop="@id/Description2"
            android:layout_alignBottom="@id/Description2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Description2"

            android:text="1 years old"
            android:textColor="#808080"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/Distance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Description2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:text="0.9 mi"
            android:textColor="#000000"
            android:textSize="12dp"


            />


        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="$17/hr"
            android:textColor="#EA6E2E"
            android:textSize="20dp"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pet_add_detail12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:clickable="true">

        <Button
            android:id="@+id/Image12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/dog_pic3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/Title12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/Image12"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/Image12"
            android:gravity="left|center_vertical"
            android:paddingBottom="3dp"
            android:text="Lucky"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/endorsed12"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/Title12"
            android:background="@drawable/girl"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/Description12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title12"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/Image12"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:text="Golden Retriever"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/Age12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title12"
            android:gravity="left|center_vertical"
            android:layout_alignTop="@id/Description12"
            android:layout_alignBottom="@id/Description12"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Description12"

            android:text="1 years old"
            android:textColor="#808080"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/Distance12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Description12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:text="1.5 mi"
            android:textColor="#000000"
            android:textSize="12dp"


            />


        <TextView
            android:id="@+id/price1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="$20/hr"
            android:textColor="#EA6E2E"
            android:textSize="20dp"
            android:textStyle="bold"

            />

    </RelativeLayout>



</LinearLayout>