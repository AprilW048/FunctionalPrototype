<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetDetails"
    android:orientation="vertical">

 <RelativeLayout
     android:id="@+id/pet_search"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
     android:clickable="true">

  <SearchView
      android:id="@+id/pet_search_box"
      android:layout_width="350dp"
      android:layout_height="wrap_content"

      android:labelFor="@string/search" />

  <ImageButton
      android:id="@+id/pet_detail_filter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/pet_search_box"
      android:layout_alignParentTop="@id/pet_search_box"
      android:layout_gravity="right"
      android:layout_marginTop="10dp"
      android:background="@drawable/ic_filter" />
 </RelativeLayout>

 <RelativeLayout
     android:id="@+id/pet_add_detail"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="20dp"
     android:layout_marginTop="15dp"
     android:clickable="true">

  <Button
      android:id="@+id/Image"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:background="@drawable/dog_pic1"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true" />

  <TextView
      android:id="@+id/Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@id/Image"
      android:layout_marginLeft="15dp"
      android:layout_toRightOf="@id/Image"
      android:gravity="left|center_vertical"
      android:paddingBottom="3dp"
      android:text="Kobe"
      android:textColor="#000000"
      android:textSize="20dp"
      android:textStyle="bold" />

  <Button
      android:id="@+id/gender"
      android:layout_width="17dp"
      android:layout_height="17dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="5dp"
      android:layout_toRightOf="@id/Title"
      android:background="@drawable/boy"
      android:gravity="center_vertical"
      android:padding="5dp"
      android:textColor="#ffffff"
      android:textStyle="bold"

      />
  <TextView
      android:id="@+id/Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/Title"
      android:layout_marginLeft="15dp"
      android:layout_toRightOf="@id/Image"
      android:gravity="left|center_vertical"
      android:paddingBottom="5dp"
      android:text="Shiba Inu"
      android:textColor="#000000"
      android:textSize="17dp" />

  <TextView
      android:id="@+id/Age"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/Title"
      android:gravity="left|center_vertical"
      android:layout_alignTop="@id/Description"
      android:layout_alignBottom="@id/Description"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/Description"

      android:text="1 years old"
      android:textColor="#808080"
      android:textSize="13dp" />

  <TextView
      android:id="@+id/Distance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/Description"
      android:layout_alignParentRight="true"
      android:layout_marginRight="30dp"
      android:gravity="left|center_vertical"
      android:paddingBottom="5dp"
      android:text="0.9 mi"
      android:textColor="#000000"
      android:textSize="12dp"


      />


  <TextView
      android:id="@+id/price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_marginRight="20dp"
      android:text="$17/hr"
      android:textColor="#EA6E2E"
      android:textSize="20dp"
      android:textStyle="bold"

      />

 </RelativeLayout>

 <RelativeLayout
     android:id="@+id/pet_add_detail1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
