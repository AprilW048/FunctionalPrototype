      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true" />

  <TextView
      android:id="@+id/Title1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@id/Image1"
      android:layout_marginLeft="15dp"
      android:layout_toRightOf="@id/Image1"
      android:gravity="left|center_vertical"
      android:paddingBottom="3dp"
      android:text="Lucky"
      android:textColor="#000000"
      android:textSize="20dp"
      android:textStyle="bold" />

  <Button
      android:id="@+id/endorsed1"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="5dp"
      android:layout_toRightOf="@id/Title1"
      android:background="@drawable/girl"
      android:gravity="center_vertical"
      android:padding="5dp"
      android:textColor="#ffffff"
      android:textStyle="bold"

      />
  <TextView
      android:id="@+id/Description1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/Title1"
      android:layout_marginLeft="15dp"
      android:layout_toRightOf="@id/Image1"
      android:gravity="left|center_vertical"
      android:paddingBottom="5dp"
      android:text="Golden Retriever"
      android:textColor="#000000"
      android:textSize="17dp" />

  <TextView
      android:id="@+id/Age1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/Title1"
      android:gravity="left|center_vertical"
      android:layout_alignTop="@id/Description1"
      android:layout_alignBottom="@id/Description1"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/Description1"

      android:text="1 years old"
      android:textColor="#808080"
      android:textSize="13dp" />

  <TextView
      android:id="@+id/Distance1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/Description1"
